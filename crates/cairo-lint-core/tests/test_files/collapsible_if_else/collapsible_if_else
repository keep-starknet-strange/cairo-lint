//! > Else if inside loop

//! > cairo_code
fn main() {
    let mut a = 1_u32;
    loop {
        if a == 10 {
            a += 1;
        } else {
            if a == 15 {
                break;
            }
            a += 2;
        }
    }
}

//! > diagnostics
warning: Plugin diagnostic: Consider using else if instead of else { if ... }
  --> lib.cairo:10:11
   |
10 |           } else {
   |  ___________-
11 | |             if a == 15 {
...  |
14 | |             a += 2;
15 | |         }
   | |_________-
   |

//! > fixed
fn main() {
    let mut a = 1_u32;
    loop {
        if a == 10 {
            a += 1;
        } else if a == 15 {
            break;
        } else {
            a += 2;
        }
    }
}

//! > ==========================================================================

//! > Else if with multiple statements

//! > cairo_code
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else {
        if !x {
            println!("x is false");
        }
        let y = 10;
        println!("y is {}", y);
    }
}

//! > diagnostics
warning: Plugin diagnostic: Consider using else if instead of else { if ... }
  --> lib.cairo:10:5
   |
10 |       else {
   |  _____-
11 | |         if !x {
...  |
15 | |         println!("y is {}", y);
16 | |     }
   | |_____-
   |

//! > fixed
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else if !x {
        println!("x is false");
    } else {
        let y = 10;
        println!("y is {}", y);
    }
}

//! > ==========================================================================

//! > Multiple else if

//! > cairo_code
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else {
        if !x {
            println!("x is false");
        }
        else {
            println!("x is neither true nor false");
        }
    }
}

//! > diagnostics
warning: Plugin diagnostic: Consider using else if instead of else { if ... }
  --> lib.cairo:10:5
   |
10 |       else {
   |  _____-
11 | |         if !x {
...  |
16 | |         }
17 | |     }
   | |_____-
   |

//! > fixed
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else if !x {
        println!("x is false");
    } else {
        println!("x is neither true nor false");
    }
}

