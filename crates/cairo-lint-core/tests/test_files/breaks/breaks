//! > Break inside of if

//! > cairo_code
fn main() {
    let mut a = 1_u32;
	#[allow(loop_for_while)]
    loop {
        if a == 10 {
            break ();
        }
        a += 1;
    }
}

//! > diagnostics
warning: Plugin diagnostic: unnecessary double parentheses found after break. Consider removing them.
  --> lib.cairo:10:13
   |
10 |             break ();
   |             ---------
   |

//! > fixed
fn main() {
    let mut a = 1_u32;
	#[allow(loop_for_while)]
    loop {
        if a == 10 {
            break;
        }
        a += 1;
    }
}

//! > ==========================================================================

//! > Break inside of if with comment

//! > cairo_code
fn main() {
    let mut a = 1_u32;
	#[allow(loop_for_while)]
    loop {
        if a == 10 {
            // this is a break
            break ();
            // this was a break
        }
        a += 1;
    }
}

//! > diagnostics
warning: Plugin diagnostic: unnecessary double parentheses found after break. Consider removing them.
  --> lib.cairo:12:13
   |
12 |             break ();
   |             ---------
   |

//! > fixed
fn main() {
    let mut a = 1_u32;
	#[allow(loop_for_while)]
    loop {
        if a == 10 {
            // this is a break
            break;
            // this was a break
        }
        a += 1;
    }
}

//! > ==========================================================================

//! > Simple break

//! > cairo_code
fn main() {
   loop {
       break ();
   }
}

//! > diagnostics
warning: Plugin diagnostic: unnecessary double parentheses found after break. Consider removing them.
 --> lib.cairo:4:8
  |
4 |        break ();
  |        ---------
  |

//! > fixed
fn main() {
   loop {
       break;
   }
}

//! > ==========================================================================

//! > Simple break allowed

//! > cairo_code
fn main() {
   loop {
       #[allow(break_unit)]
       break ();
   }
}

//! > diagnostics
warning: Plugin diagnostic: unnecessary double parentheses found after break. Consider removing them.
 --> lib.cairo:4:8
  |
4 |          #[allow(break_unit)]
  |  ________-
5 | |        break ();
  | |________________-
  |

//! > fixed
fn main() {
   loop {
       #[allow(break_unit)]
       break;
   }
}
