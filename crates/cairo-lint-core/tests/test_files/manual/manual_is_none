//! > test basic is none

//! > cairo_code
fn main() {
    let foo: Option::<i32> = Option::None;
    let _foo = match foo {
        Option::Some(_) => false,
        Option::None => true,
    };
}

//! > diagnostics
warning: Plugin diagnostic: Manual match for `is_none` detected. Consider using `is_none()` instead
