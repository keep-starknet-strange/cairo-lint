//! > check if or if

//! > cairo_code
fn main() {
    let sad_people: Array<u32> = array![];
    let happy_people: Array<u32> = array![];
    if !sad_people.is_empty() || !happy_people.is_empty() {
        panic!("panic");
    }
}

