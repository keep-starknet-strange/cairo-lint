//! > check if then else

//! > cairo_code
fn main() {
    let sad_people: Array<u32> = array![1, 2, 3];
    if !sad_people.is_empty() {
        let _ = 0;
    } else if sad_people.len() > 1 {
        panic!("there are sad people");
    } else if sad_people.len() > 2 {
        panic!("there are more sad people");
    }
}

