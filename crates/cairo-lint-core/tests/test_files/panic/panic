//! > Empty Panic

//! > cairo_code
fn main() {
  panic!("");
}

//! > diagnostics
warning: Plugin diagnostic: Leaving `panic!` in the code is discouraged.
 --> lib.cairo:2:3
  |
2 |   panic!("");
  |   -----
  |
warning: Plugin diagnostic: Leaving `panic!` in the code is discouraged.
 --> lib.cairo:2:3
  |
2 |   panic!("");
  |   -----
  |

//! > fixed
fn main() {
  panic!("");
}

//! > ==========================================================================
//! > Empty Panic allowed

//! > cairo_code
fn main() {
    #[allow(panic)]
    panic!("");
}

//! > diagnostics

//! > fixed
fn main() {
    #[allow(panic)]
    panic!("");
}
//! > ==========================================================================
//! > Empty Panic function allowed

//! > cairo_code
fn main() {
    #[allow(panic)]
    panic(array![]);
}

//! > diagnostics

//! > fixed
fn main() {
    #[allow(panic)]
    panic(array![]);
}

//! > ==========================================================================

//! > Multiple Panic

//! > cairo_code
fn main() {
  panic!("panic");
  panic!("panic 2");
}

