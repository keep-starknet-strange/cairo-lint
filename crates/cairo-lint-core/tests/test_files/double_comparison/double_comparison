//! > redundant greater than or equal and less than or equal

//! > cairo_code
fn main() -> bool {
    let x = 5_u32;
    let y = 10_u32;
    if x >= y || x <= y {
        true
    } else {
        false
    }
}

//! > diagnostics
warning: Plugin diagnostic: Redundant double comparison found. Consider simplifying to a single comparison.
 --> lib.cairo:4:8
  |
4 |     if x >= y || x <= y {
  |        ----------------
  |

//! > fixed
fn main() -> bool {
    let x = 5_u32;
    let y = 10_u32;
    if x >= y || x <= y {
        true
    } else {
        false
    }
}

//! > ==========================================================================

//! > simple double comparison allowed

//! > cairo_code
fn main() -> bool {
    let x = 5_u32;
    let y = 10_u32;
    #[allow(double_comparison)]
    x == y || x > y 
}

//! > diagnostics

//! > fixed
fn main() -> bool {
    let x = 5_u32;
    let y = 10_u32;
    #[allow(double_comparison)]
    x == y || x > y 
}

//! > ==========================================================================

//! > simple let double comparison allowed

//! > cairo_code
fn main() {
    let x = 5_u32;
    let y = 10_u32;
    #[allow(double_comparison)]
     let _cond = x == y || x > y;
}

//! > diagnostics

//! > fixed
fn main() {
    let x = 5_u32;
    let y = 10_u32;
    #[allow(double_comparison)]
     let _cond = x == y || x > y;
}
