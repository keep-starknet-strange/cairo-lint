//! > destructuring match twisted differently

//! > cairo_code
fn main() {
    let variable = Option::Some(Option::Some(1_felt252));
    // Invalid match so no diag/fix for this one
    match variable {
        _ => (),
        // This one is valid
        Option::Some(a) => match a {
            Option::Some(b) => println!("{b}"),
            _ => (),
        },
    };
}

