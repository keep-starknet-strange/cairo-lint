//! > fixed
fn main() {
    let variable = Option::Some(Option::Some(1_felt252));
    // This match is invalid hence no diag/fix for this one
    if let Option::Some(a) = variable {
        match a {
            _ => (),
            Option::Some(b) => println!("{b}"),
        }
    };
}

