//! > loop with multiple conditions

//! > cairo_code
fn main() {
    let mut a: u16 = 0;
    let mut b: u16 = 0;
    loop {
        if a > 10 && b < 5 {
            break;
        }
        a += 1;
        b += 1;
    }
}

//! > diagnostics
