//! > Same condition with multiple if else

//! > cairo_code
fn main(){
    let str1:felt252 = 'hello';
    let str2:felt252 = 'hello';

    if str1 == str2 {
        println!("Strings are equal");
    } else if str1 == str2 {
        println!("Strings are still equal");
    } else if str1 == str2 {
        println!("Strings are still equal");
    } else if str1 == str2 {
        println!("Strings are still equal");
    } 
    else if str1 == str2 {
        println!("Strings are still equal");
    } 
}

