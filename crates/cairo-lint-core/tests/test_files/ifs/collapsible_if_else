//! > ==========================================================================

//! > Else if with multiple statements

//! > cairo_code
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else {
        if !x {
            println!("x is false");
        }
        else {
            let y = 10;
            println!("y is {}", y);
        }
    }
}

//! > diagnostics
warning: Plugin diagnostic: Consider using else if instead of else { if ... }
  --> lib.cairo:10:5
   |
10 |       else {
   |  _____-
11 | |         if !x {
...  |
17 | |         }
18 | |     }
   | |_____-
   |

//! > fixed
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else if !x  {
            println!("x is false");
        }
         else {
            let y = 10;
            println!("y is {}", y);
        }
}

//! > ==========================================================================

//! > Multiple else if

//! > cairo_code
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else {
        if !x {
            println!("x is false");
        }
        else {
            println!("x is neither true nor false");
        }
    }
}

//! > diagnostics
warning: Plugin diagnostic: Consider using else if instead of else { if ... }
  --> lib.cairo:10:5
   |
10 |       else {
   |  _____-
11 | |         if !x {
...  |
16 | |         }
17 | |     }
   | |_____-
   |

//! > fixed
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else if !x  {
            println!("x is false");
        }
         else {
            println!("x is neither true nor false");
        }
}

