//! > Else if inside loop

//! > cairo_code
fn main() {
    let mut a = 1_u32;
    loop {
        if a == 10 {
            a += 1;
        } else {
            if a == 15 {
                break;
            }
            else {
                a += 2;
            }
        }
    }
}

//! > diagnostics
warning: Plugin diagnostic: Consider using else if instead of else { if ... }
  --> lib.cairo:6:11
   |
 6 |           } else {
   |  ___________-
 7 | |             if a == 15 {
...  |
12 | |             }
13 | |         }
   | |_________-
   |

//! > fixed
fn main() {
    let mut a = 1_u32;
    loop {
        if a == 10 {
            a += 1;
        } else if a == 15  {
                break;
            }
             else {
                a += 2;
            }
    }
}

//! > ==========================================================================

//! > Else if with multiple statements

//! > cairo_code
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else {
        if !x {
            println!("x is false");
        }
        else {
            let y = 10;
            println!("y is {}", y);
        }
    }
}

//! > diagnostics
warning: Plugin diagnostic: Consider using else if instead of else { if ... }
  --> lib.cairo:6:5
   |
 6 |       else {
   |  _____-
 7 | |         if !x {
...  |
13 | |         }
14 | |     }
   | |_____-
   |

//! > fixed
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else if !x  {
            println!("x is false");
        }
         else {
            let y = 10;
            println!("y is {}", y);
        }
}

//! > ==========================================================================

//! > Multiple else if

//! > cairo_code
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else {
        if !x {
            println!("x is false");
        }
        else {
            println!("x is neither true nor false");
        }
    }
}

//! > diagnostics
warning: Plugin diagnostic: Consider using else if instead of else { if ... }
  --> lib.cairo:6:5
   |
 6 |       else {
   |  _____-
 7 | |         if !x {
...  |
12 | |         }
13 | |     }
   | |_____-
   |

//! > fixed
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else if !x  {
            println!("x is false");
        }
         else {
            println!("x is neither true nor false");
        }
}

