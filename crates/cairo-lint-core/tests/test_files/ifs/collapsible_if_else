//! > Simple else if with new line

//! > cairo_code
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else {
        if !x {
            println!("x is false");
        }
    }
}

//! > diagnostics
warning: Plugin diagnostic: Consider using else if instead of else { if ... }
  --> lib.cairo:6:5
   |
 6 |       else {
   |  _____-
 7 | |         if !x {
 8 | |             println!("x is false");
 9 | |         }
10 | |     }
   | |_____-
   |

//! > fixed
fn main() {
    let x = true;
    if x {
        println!("x is true");
    }
    else if !x  {
            println!("x is false");
        }
 }

//! > ==========================================================================

//! > Simple else if with new line allowed

//! > cairo_code
fn main() {
    let x = true;
    #[allow(collapsible_if_else)]
    if x {
        println!("x is true");
    }
    else {
        if !x {
            println!("x is false");
        }
    }
}

//! > diagnostics

//! > fixed
fn main() {
    let x = true;
    #[allow(collapsible_if_else)]
    if x {
        println!("x is true");
    }
    else {
        if !x {
            println!("x is false");
        }
    }
}

//! > ==========================================================================

