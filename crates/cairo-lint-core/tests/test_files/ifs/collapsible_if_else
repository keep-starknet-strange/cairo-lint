//! > Else if inside loop

//! > cairo_code
fn main() {
    let mut a = 1_u32;
    loop {
        if a == 10 {
            a += 1;
        } else {
            if a == 15 {
                break;
            }
            else {
                a += 2;
            }
        }
    }
}

//! > diagnostics
warning: Plugin diagnostic: Consider using else if instead of else { if ... }
  --> lib.cairo:10:11
   |
10 |           } else {
   |  ___________-
11 | |             if a == 15 {
...  |
16 | |             }
17 | |         }
   | |_________-
   |

//! > fixed
fn main() {
    let mut a = 1_u32;
    loop {
        if a == 10 {
            a += 1;
        } else if a == 15  {
                break;
            }
             else {
                a += 2;
            }
    }
}
